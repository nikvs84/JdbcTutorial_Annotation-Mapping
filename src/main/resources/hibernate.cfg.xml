<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:~/test_annotation_orm</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <!--<property name="hibernate.hbm2ddl.auto">update</property>-->
        <!--create - для создания БД по маппингу, update - для работы с существующей БД.-->
        <property name="show_sql">true</property>

        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <!--Этот параметр может использоваться при отладке-->

        <mapping class="entity.Address"/>
        <mapping class="entity.Employee"/>
        <mapping class="entity.Project"/>
    </session-factory>
</hibernate-configuration>